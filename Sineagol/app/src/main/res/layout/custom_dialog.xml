<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <EditText
        android:id="@+id/edtcstname"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="15dp"
        android:maxLength="20"
        android:singleLine="true"></EditText>

    <EditText
        android:id="@+id/edtcstsurname"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="55dp"
        android:maxLength="20"
        android:singleLine="true"></EditText>

    <Button
        android:id="@+id/btnbook"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="300dp"
        android:layout_toEndOf="@+id/btncancel"
        android:layout_toRightOf="@+id/btncancel"
        android:text="Book">

    </Button>

    <Button
        android:id="@+id/btncancel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="300dp"
        android:text="Cancel">

    </Button>

    <TextView
        android:id="@+id/txtprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="90dp"
        android:singleLine="true"
        android:text="Prices"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#3E0F0F">

    </TextView>

    <TextView
        android:id="@+id/txtseatNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="90dp"
        android:singleLine="true"
        android:text="Seat:"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#3E0F0F"
        android:verticalScrollbarPosition="defaultPosition">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="20dp"
        android:singleLine="true"
        android:text="Seat:"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="20dp"
        android:singleLine="true"
        android:text="Price:"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/edtcstmail"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="135dp"
        android:maxLength="40"
        android:singleLine="true"
        android:hint="blabla@blabla.com"
        android:inputType="textEmailAddress"></EditText>

    <EditText
        android:id="@+id/edtcstph"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="95dp"
        android:inputType="phone"
        android:maxLength="10"
        android:hint="534 324 43 43"
        android:singleLine="true"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:text="Name:"
        android:textStyle="bold"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20dp"
        android:singleLine="true"
        android:text="Surname:"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="20dp"
        android:singleLine="true"
        android:text="Phone:"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        android:singleLine="true"
        android:text="E-mail:"
        android:textStyle="bold"></TextView>



</RelativeLayout>